<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/tvEmployeeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/frag_text_view_size"/>

    <TextView
        android:id="@+id/tvEmployeeBirthDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/frag_text_view_size"/>

    <TextView
        android:id="@+id/tvEmployeeWage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/frag_text_view_size"/>

    <TextView
        android:id="@+id/tvEmployeeHireDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/frag_text_view_size"/>


    <ImageView
        android:id="@+id/ivEmployeeImage"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:contentDescription="Picture of Employee"/>





</LinearLayout>